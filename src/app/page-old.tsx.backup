async function getHomeData() {
  try {
    // جلب التصنيفات مع عدد المنشورات
    const categories = await prisma.category.findMany({
      where: { isActive: true },
      include: {
        _count: {
          select: { posts: true }
        }
      },
      orderBy: { orderNumber: 'asc' },
      take: 8
    })

    // جلب المنشورات المميزة
    const featuredPosts = await prisma.post.findMany({
      where: { 
        status: 'PUBLISHED',
        isFeatured: true 
      },
      include: {
        category: {
          select: {
            id: true,
            nameAr: true,
            slug: true,
            color: true
          }
        },
        tags: {
          include: {
            tag: {
              select: {
                id: true,
                nameAr: true,
                slug: true,
                color: true
              }
            }
          },
          take: 3
        }
      },
      orderBy: { publishedAt: 'desc' },
      take: 6
    })

    // جلب أحدث المنشورات
    const latestPosts = await prisma.post.findMany({
      where: { status: 'PUBLISHED' },
      include: {
        category: {
          select: {
            id: true,
            nameAr: true,
            slug: true,
            color: true
          }
        }
      },
      orderBy: { publishedAt: 'desc' },
      take: 8
    })

    // إحصائيات
    const stats = await prisma.$transaction([
      prisma.post.count({ where: { status: 'PUBLISHED' } }),
      prisma.category.count({ where: { isActive: true } }),
      prisma.tag.count({ where: { isActive: true } }),
    ])

    return {
      categories,
      featuredPosts,
      latestPosts,
      stats: {
        posts: stats[0],
        categories: stats[1],
        tags: stats[2]
      }
    }
  } catch (error) {
    console.error('خطأ في جلب البيانات:', error)
    return {
      categories: [],
      featuredPosts: [],
      latestPosts: [],
      stats: { posts: 0, categories: 0, tags: 0 }
    }
  }
}

